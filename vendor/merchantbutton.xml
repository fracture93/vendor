<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script file="merchantbutton.lua"/>

	<!-- Rules dialog Frame -->
	<Frame name="Vendor_Merchant_Button" virtual="true" hidden="true" frameStrata="HIGH">
		<Size>
			<AbsDimension x="132" y="22"/>
		</Size>
		<Anchors>
			<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" relativeTo="MerchantFrameBg" y="2"/>
			<Anchor point="RIGHT" relativePoint="RIGHT" relativeTo="MerchantRepairAllIcon" x="4"/>
		</Anchors>
		<Frames>
			<Button parentKey="Sell" inherits="UIPanelButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT"/>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>
				<Scripts>
					<OnClick>self:GetParent().Invoke(self:GetParent(), "OnSellClicked")</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>Vendor.LoadImplementation(self, nil, "MerchantButton")</OnLoad>
		</Scripts>
	</Frame>
</Ui>