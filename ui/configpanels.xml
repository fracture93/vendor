<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Script file="configpanels.lua"/>

    <!--
        VendorGeneralConfigPanel
            This is the main config panel for vendor, this contains the options that most likely
            will need to be changed.
    -->
    <Frame name="VendorGeneralConfigPanel" hidden="true" parent="UIParent">
        <Layers>
            <Layer level="BACKGROUND">
                <FontString inherits="GameFontDisableTiny" justifyH="RIGHT" justifyV="BOTTOM" parentKey="VersionInfo">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" x="10" y="30"/>
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-10" y="8"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="ARTWORK">
                <FontString name="$parent.Title" parentKey="Title" inherits="GameFontNormalHuge" JustifyV="TOP" JustifyH="LEFT">
                    <KeyValues>
                        <KeyValue key="LocKey" value="ADDON_NAME" type="string"/>
                    </KeyValues>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="16" y="-16"/>
                        <Anchor point="BOTTOMRIGHT" x="-16" y="-32" relativePoint="TOPRIGHT"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="ARTWORK">
                <FontString name="$parent.HelpText" parentKey="HelpText" inherits="GameFontHighlight" JustifyV="TOP" JustifyH="LEFT">
                    <Size x="10" y="60"/>
                    <KeyValues>
                        <KeyValue key="LocKey" value="INTERFACE_PANEL_HELPTEXT" type="string"/>
                    </KeyValues>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parent.Title" relativePoint="BOTTOMLEFT" x="0" y="-12"/>
                        <Anchor point="TOPRIGHT" relativeTo="$parent.Title" relativePoint="BOTTOMRIGHT" x="0" y="-12"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>    
        <Frames>

            <!-- Open settings / rules / bindings buttons -->
            <Button parentKey="openSettings" inherits="UIPanelButtonTemplate">
                <Size x="172" y="28"/>
                <KeyValues>
                    <KeyValue key="LocKey" value="OPTIONS_OPEN_SETTINGS" type="string"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.HelpText" relativePoint="BOTTOMLEFT" y="-8"/>
                </Anchors>
                <Scripts>
                    <OnClick>self:GetParent():OnOpenRules("config")</OnClick>
                </Scripts>
            </Button>

            <Button parentKey="openRules" inherits="UIPanelButtonTemplate">
                <Size x="172" y="28"/>
                <KeyValues>
                    <KeyValue key="LocKey" value="OPTIONS_OPEN_RULES" type="string"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.openSettings" relativePoint="BOTTOMLEFT" y="-8"/>
                </Anchors>
                <Scripts>
                    <OnClick>self:GetParent():OnOpenRules("rules")</OnClick>
                </Scripts>
            </Button>

            <Button parentKey="openBindings" inherits="UIPanelButtonTemplate">
                <Size x="172" y="28"/>
                <KeyValues>
                    <KeyValue key="LocKey" value="OPTIONS_SHOW_BINDINGS" type="string"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.openRules" relativePoint="BOTTOMLEFT" y="-8"/>
                </Anchors>
                <Scripts>
                    <OnClick>self:GetParent():OpenBindings()</OnClick>
                </Scripts>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad>Vendor.LoadImplementation(self, nil, "ConfigPanel")</OnLoad>
        </Scripts>
    </Frame>

</Ui>
