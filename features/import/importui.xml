<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">	
	<Frame name="ImportRules_Step1" virtual="true" hidden="true">
        <Size x="20" y="20"/>
        <Layers>
            <Layer level="ARTWORK">                
                <FontString parentKey="help" inherits="GameFontHighlight" text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." justifyH="LEFT">
                    <Size x="1" y="48"/>
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                        <Anchor point="TOPRIGHT"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame inherits="CommonUI_Edit" parentKey="Data">
                <KeyValues>
                    <KeyValue key="Placeholder" value="Paster you import text here" type="string"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.help" relativePoint="BOTTOMLEFT" y="-8"/>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.help" relativePoint="BOTTOMRIGHT" y="-8"/>
                </Anchors>
            </Frame>
        </Frames>
	</Frame>

    <Frame name="Import_ImportDialog" virtual="true" hidden="true">
        <Size x="300" y="400"/>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="help" inherits="GameFontNormal" justifyH="LEFT">
                    <KeyValues>
                        <KeyValue key="Color" value="SECONDARY_TEXT"/>
                        <KeyValue key="LocText" value="IMPORT_HELP_TEXT"/>
                    </KeyValues>
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                        <Anchor point="TOPRIGHT"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame inherits="CommonUI_TextArea" parentKey="import">
                <KeyValues>
                    <KeyValue key="Placeholder" value="Import place holder"/>
                    <KeyValue key="Handler" value="OnImportText"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT"/>
                    <Anchor point="TOPLEFT" relativeKey="$parent.help" relativePoint="BOTTOMLEFT" y="-12"/>
                </Anchors>
            </Frame>
        </Frames>
    </Frame>    

    <Frame name="Import_ExportDialog" virtual="true" hidden="true">
        <Size x="300" y="400"/>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="help" inherits="GameFontNormal" justifyH="LEFT">
                    <KeyValues>
                        <KeyValue key="Color" value="SECONDARY_TEXT"/>
                        <KeyValue key="LocText" value="EXPORT_HELP_TEXT"/>
                    </KeyValues>
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                        <Anchor point="TOPRIGHT"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame inherits="CommonUI_TextArea" parentKey="export">
                <KeyValues>
                    <KeyValue key="ReadOnly" value="true" type="boolean"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT"/>
                    <Anchor point="TOPLEFT" relativeKey="$parent.help" relativePoint="BOTTOMLEFT" y="-12"/>
                </Anchors>
            </Frame>
        </Frames>
    </Frame>

</Ui>