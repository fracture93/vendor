<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">	
    <Script file="import/command_button.lua"/>

	<Frame name="TextArea" virtual="true" mixin="BackdropTemplateMixin">
        <KeyValues>
            <KeyValue key="_autoHookHandlers" value="true" type="boolean"/>
        </KeyValues>
   		<Layers>
			<Layer level="OVERLAY">
				<FontString  parentKey="Label" inherits="GameFontNormal" justifyH="LEFT" justifyV="BOTTOM">
					<Size x="1" y="14"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT"  relativePoint="TOPLEFT" x="2" y="4"/>
						<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" x="-2" y="4"/>
					</Anchors>
				</FontString>
			</Layer>
   		</Layers>
		<Frames>
			<ScrollFrame inherits="UIPanelScrollFrameTemplate" parentKey="Scroller">
				<Anchors>
					<Anchor point="TOPLEFT" y="-6" x="6"/>
					<Anchor point="BOTTOMRIGHT" x="-6" y="5"/>
				</Anchors>				
				<ScrollChild>
                    <EditBox name="Vendor_EditBox_Base" autoFocus="false" multiline="true">
						<Size x="200" y="100"/>
                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                        </Anchors>
		                <Scripts>
							<OnUpdate>ScrollingEdit_OnUpdate(self, elapsed, self:GetParent())</OnUpdate>
							<OnCursorChanged function="ScrollingEdit_OnCursorChanged"/>
			                <OnEscapePressed function="EditBox_ClearFocus"/>
                        </Scripts>
            		    <TextInsets>
	    		            <AbsInset left="4" right="4" top="4" bottom="4"/>
		                </TextInsets>
		                <FontString inherits="ChatFontNormal"/>
   	                </EditBox>
				</ScrollChild>
				<Scripts>
					<OnMouseDown>self:GetScrollChild():SetFocus()</OnMouseDown>
				</Scripts>
			</ScrollFrame>
		</Frames>
		<Scripts>
			<OnLoad>Vendor.LoadImplementation(self, "Controls", "TextArea")</OnLoad>
		</Scripts>
	</Frame>    

	<Frame name="ImportRules_Step1" virtual="true">
        <Layers>
            <Layer level="ARTWORK">                
                <FontString parentKey="help" inherits="GameFontHighlight" text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." justifyH="LEFT">
                    <Size x="1" y="48"/>
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                        <Anchor point="TOPRIGHT"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame inherits="TextArea" parentKey="Data">
                <KeyValues>
                    <KeyValue key="backdropInfo" value="BACKDROP_TUTORIAL_16_16" type="GLOBAL"/>
                    <KeyValue key="Placeholder" value="Paster you import text here" type="string"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.help" relativePoint="BOTTOMLEFT" y="-8"/>
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>
            </Frame>
        </Frames>
	</Frame>

	<Frame name="Import_ImportDialog" virtual="true">
        <Size x="300" y="400"/>
        <Frames>
            <Frame inherits="CommonUI_TabControl" parentKey="tabs">
                <KeyValues>
                    <KeyValue key="hideTabs" value="true" type="boolean"/>
                </KeyValues>
                <Anchors>
					<Anchor point="TOPLEFT"/>
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>
            </Frame>
        </Frames>
        <Scripts>
        </Scripts>
    </Frame>
</Ui>